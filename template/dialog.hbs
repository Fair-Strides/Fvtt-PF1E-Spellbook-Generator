		<textarea id='spellList1' name='spellList1' rows='10' cols='50'></textarea>
	</div>
	<div name='level2-list' id='level2-list' class='form-group flexrow' style='display: block' data-dtype='String' data-spellList2='{{listLevel2}}'>
