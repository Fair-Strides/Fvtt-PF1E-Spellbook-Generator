		<textarea id='spellList2' name='spellList2' rows='10' cols='50'></textarea>
	</div>
	<div name='level3-list' id='level3-list' class='form-group flexrow' style='display: block' data-dtype='String' data-spellList3='{{listLevel3}}'>
